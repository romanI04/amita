{
  "manifest_version": 3,
  "name": "amita.ai - AI Writing Assistant",
  "version": "1.0.0",
  "description": "Preserve your authentic writing voice with real-time AI detection and improvement suggestions",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://amita.ai/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": {
      "16": "public/icon-16.png",
      "32": "public/icon-32.png",
      "48": "public/icon-48.png",
      "128": "public/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "public/options.html",
  "icons": {
    "16": "public/icon-16.png",
    "32": "public/icon-32.png",
    "48": "public/icon-48.png",
    "128": "public/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/inject.js", "src/styles.css", "public/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "analyze-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Analyze selected text"
    },
    "quick-fix": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Apply quick fixes to selected text"
    }
  }
}